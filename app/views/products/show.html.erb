<div class="container"> 

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<div class="row">
  <div class="col-md-8"><%= image_tag(@product.image_url, class: "img-responsive img-zoom", data_zoom_image: @product.image_url) %>
  <br>
    <p>   
      <%= render 'new_comment' %> 
    </p>
  </div> <!-- end col md-8--> 

  <div class="col-md-4">
    <p>
      <h2><%= @product.name %></h2> 
    </p>
    <p><%= @product.description %></p>
    <p>
      Price: <%= number_to_currency(@product.price) %> 
    </p>
    <p>
      <strong>Colour:</strong> <%= @product.colour %>
    </p>
    <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
</div> <!-- end col --> 

</div> <!-- end row --> 
</div> <!-- end container --> 